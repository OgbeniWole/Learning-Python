__author__ = 'Ogbeniwole'

player1 = input("Player 1: Choose between Rock, Paper and Scissors: ")
player2 = input("Player 2: Choose between Rock, Paper and Scissors: ")

if player2 == "Rock" and player1 == "Paper":
    print("The if comd works")

while True:
    if player1 == "Rock" and player2 == "Scissors":
        print("Congratulations Player 1, you won!!!!!")
        print("Do you want to start a new game?")
        break
    elif player1 == "Scissors" and player2 == "Paper":
        print("Congratulations Player 1, you won!!!!!")
        print("Do you want to start a new game?")
        break
    elif player1 == "Paper" and player2 == "Rock":
        print("Congratulations Player 1, you won!!!!!")
        print("Do you want to start a new game?")
        break
    elif player2 == "Rock" and player1 == "Scissors":
        print("Congratulations Player 2, you won!!!!!")
        print("Do you want to start a new game?")
        break
    elif player2 == "Scissors" and player1 == "Paper":
        print("Congratulations Player 2, you won!!!!!")
        print("Do you want to start a new game?")
        break
    elif player2 == "Paper" and player1 == "Rock":
        print("Congratulations Player 2, you won!!!!!")
        print("Do you want to start a new game?")
        break
    else:
        print("Its a tie, Will you like to try again?")
        break
